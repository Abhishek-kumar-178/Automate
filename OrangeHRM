from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time

# -------------------- Login Page --------------------
class LoginPage:
    def __init__(self, driver):
        self.driver = driver
        self.username_input = (By.NAME, "username")
        self.password_input = (By.NAME, "password")
        self.login_button = (By.XPATH, "//button[@type='submit']")

    def login(self, username, password):
        WebDriverWait(self.driver, 10).until(
            EC.presence_of_element_located(self.username_input)
        ).send_keys(username)
        self.driver.find_element(*self.password_input).send_keys(password)
        self.driver.find_element(*self.login_button).click()


# -------------------- PIM Page --------------------
class PIMPage:
    def __init__(self, driver):
        self.driver = driver
        self.pim_menu = (By.XPATH, "//span[text()='PIM']")
        self.add_employee_link = (By.XPATH, "//a[contains(@href,'pim/addEmployee')]")
        self.first_name = (By.NAME, "firstName")
        self.last_name = (By.NAME, "lastName")
        self.save_button = (By.XPATH, "//button[@type='submit']")
        self.employee_list_link = (By.XPATH, "//a[contains(@href,'pim/viewEmployeeList')]")
        self.search_name = (By.XPATH, "//input[@placeholder='Type for hints...']")
        self.search_button = (By.XPATH, "//button[@type='submit']")

    def go_to_pim(self):
        WebDriverWait(self.driver, 10).until(
            EC.element_to_be_clickable(self.pim_menu)
        ).click()

    def add_new_employee(self, first, last):
        WebDriverWait(self.driver, 10).until(
            EC.element_to_be_clickable(self.add_employee_link)
        ).click()
        WebDriverWait(self.driver, 10).until(
            EC.presence_of_element_located(self.first_name)
        ).send_keys(first)
        self.driver.find_element(*self.last_name).send_keys(last)
        self.driver.find_element(*self.save_button).click()
        time.sleep(2)  # wait for save to complete

    def verify_employee(self, name):
        WebDriverWait(self.driver, 10).until(
            EC.element_to_be_clickable(self.employee_list_link)
        ).click()

        search_box = WebDriverWait(self.driver, 10).until(
            EC.presence_of_element_located(self.search_name)
        )
        search_box.clear()
        search_box.send_keys(name)

        WebDriverWait(self.driver, 10).until(
            EC.element_to_be_clickable(self.search_button)
        ).click()

        time.sleep(2)  # give time for list to update
        if name in self.driver.page_source:
            print("Name Verified")
        else:
            print("Name Not Found")


# -------------------- Test Workflow --------------------
class TestOrangeHRM:
    def test_workflow(self):
        driver = webdriver.Chrome()
        driver.get("https://opensource-demo.orangehrmlive.com/web/index.php/auth/login")
        driver.maximize_window()

        # Login
        login = LoginPage(driver)
        login.login("Admin", "admin123")

        # Navigate to PIM
        pim = PIMPage(driver)
        pim.go_to_pim()

        # Add Employees
        employees = [("Akshay", "Kumar"), ("Abhishek", "Kumar"), ("Ranveer", "Singh")]
        for emp in employees:
            pim.add_new_employee(emp[0], emp[1])

        # Verify Employees
        for emp in employees:
            pim.verify_employee(emp[0])  # verifying by first name

        # Logout
        WebDriverWait(driver, 10).until(
            EC.element_to_be_clickable((By.CLASS_NAME, "oxd-userdropdown-tab"))
        ).click()
        WebDriverWait(driver, 10).until(
            EC.element_to_be_clickable((By.LINK_TEXT, "Logout"))
        ).click()

        driver.quit()



